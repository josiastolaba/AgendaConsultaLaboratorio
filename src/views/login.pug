doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet" href="/style.css")
        link(rel="icon", href="/images/medico.ico", type="image/x-icon")
        style.
            h1{
                font-size: 70px;
            }
        title Agenda de Consulta
    body 
      h1.text-center.text-dark AGENDA DE CONSULTA MEDICA
      br
      .container
          .card-inicio 
              .card-body-inicio
                  h1.text-center Iniciar Sesión
                  form.allforms(class="needs-validation" novalidate)
                      .mb-3
                          label(for="dni" class="form-label") DNI
                          input#dni.form-control(type="dni" name="dni" placeholder="Ingrese su DNI" required)
                          .invalid-feedback El correo electrónico es obligatorio y debe ser válido.
                      .mb-3
                          label(for="password" class="form-label") Contraseña
                          input#password.form-control(type="password" name="password" placeholder="Ingrese su contraseña" required)
                          .invalid-feedback La contraseña es obligatoria.
                      #mensaje.text-danger
                      .boton.d-flex.flex-row.justify-content-between
                        button.btn.btn-primary(type="button" onclick= "iniciarSesion()") Iniciar Sesión
                        a.btn.btn-secondary(href="/inicio/formRegistro") Registrarme

      script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
      script(src="/login.js")
      script.
          (() => {
          'use strict';
          const forms = document.querySelectorAll('.needs-validation');
          Array.from(forms).forEach(form => {
              form.addEventListener('submit', event => {
              if (!form.checkValidity()) {
                  event.preventDefault();
                  event.stopPropagation();
              }
              form.classList.add('was-validated');
              }, false);
          });
          })();


